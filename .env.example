# Syndicate Environment Configuration
# Copy this file to .env.local and update with your actual values

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# PHASE 4 MAINNET: Switch to production for live bridging
NEXT_PUBLIC_ENVIRONMENT=production
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_USE_MOCK_DATA=false
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
# Show "Coming Soon" banners for incomplete features (only visible in development)
NEXT_PUBLIC_SHOW_FEATURE_BANNERS=false

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Megapot API (fallback data will be used if not configured)
NEXT_PUBLIC_MEGAPOT_API_KEY=your_megapot_api_key_here

# =============================================================================
# BLOCKCHAIN CONFIGURATION - MAINNET
# =============================================================================
# PHASE 4 MAINNET: All RPC endpoints switched to mainnet
# Base Mainnet (Chain ID 8453)
NEXT_PUBLIC_BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/your-api-key
# Ethereum Mainnet (Chain ID 1)
NEXT_PUBLIC_ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
# Avalanche C-Chain Mainnet (Chain ID 43114)
NEXT_PUBLIC_AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
# Sepolia Testnet (for testing only, remove in production)
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://sepolia.g.alchemy.com/v2/your-api-key

# Pimlico Configuration (for account abstraction)
NEXT_PUBLIC_PIMLICO_API_KEY=pim_<your-api-key>
NEXT_PUBLIC_PIMLICO_BASE_RPC=https://api.pimlico.io/v2/8453/rpc?apikey=pim_<your-api-key>
NEXT_PUBLIC_PIMLICO_AVALANCHE_RPC=https://api.pimlico.io/v2/43114/rpc?apikey=pim_<your-api-key>

# =============================================================================
# CONTRACT ADDRESSES
# =============================================================================
# Contract Addresses (update with actual deployments)
NEXT_PUBLIC_MEGAPOT_CONTRACT=0xbEDd4F2beBE9E3E636161E644759f3cbe3d51B95
NEXT_PUBLIC_SYNDICATE_CONTRACT=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_CAUSE_FUND_CONTRACT=0x0000000000000000000000000000000000000000

# Token Addresses
NEXT_PUBLIC_USDC_TOKEN_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
NEXT_PUBLIC_REFERRER_ADDRESS=0x0000000000000000000000000000000000000000

# Vault Strategy Contracts
NEXT_PUBLIC_SPARK_VAULT=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_MORPHO_VAULT=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_AAVE_VAULT=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_UNISWAP_VAULT=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_OCTANT_VAULT=0x0000000000000000000000000000000000000000

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================
# WalletConnect Configuration
# Get your project ID from https://dashboard.reown.com (formerly WalletConnect Dashboard)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Web3Auth Configuration
NEXT_PUBLIC_WEB3AUTH_CLIENT_ID=your_web3auth_client_id_here

# =============================================================================
# NEAR PROTOCOL CONFIGURATION
# =============================================================================
NEXT_PUBLIC_NEAR_NETWORK_ID=mainnet
NEXT_PUBLIC_NEAR_NODE_URL=https://rpc.mainnet.near.org
NEXT_PUBLIC_NEAR_WALLET_URL=https://wallet.mainnet.near.org
NEXT_PUBLIC_NEAR_HELPER_URL=https://helper.mainnet.near.org

# NEAR Intents / 1Click SDK Configuration
# Request a JWT token from Defuse Labs: https://docs.google.com/forms/d/e/1FAIpQLSdrSrqSkKOMb_a8XhwF0f7N5xZ0Y5CYgyzxiAuoC2g4a2N68g/viewform
NEXT_PUBLIC_NEAR_INTENTS_JWT=your_defuse_jwt_token_here

# =============================================================================
# STACKS CONFIGURATION
# =============================================================================
# Stacks API endpoint
NEXT_PUBLIC_STACKS_API_URL=https://api.stacks.co
NEXT_PUBLIC_STACKS_API_KEY=your_stacks_api_key_here

# Stacks Lottery Bridge Contract (deployed address)
STACKS_LOTTERY_CONTRACT=SP31BERCCX5RJ20W9Y10VNMBGGXXW8TJCCR2P6GPG.stacks-lottery

# Stacks Bridge Operator Configuration (CRITICAL - for bridge operator service only)
# NEVER commit this key to git! Only add to .env.local
STACKS_BRIDGE_OPERATOR_KEY=0x...

# Liquidity management strategy for bridge operator
LIQUIDITY_STRATEGY=pre-funded  # Options: 'pre-funded' or 'real-time'

# =============================================================================
# SOLANA CONFIGURATION - MAINNET (PHASE 4)
# =============================================================================
# PHASE 4 MAINNET: Switched from devnet to mainnet-beta for production bridging
# Primary Solana RPC endpoint (Mainnet-Beta)
NEXT_PUBLIC_SOLANA_RPC=https://api.mainnet-beta.solana.com
# Fallback RPC endpoints (comma-separated, mainnet only)
NEXT_PUBLIC_SOLANA_RPC_FALLBACKS=https://solana-mainnet.g.alchemy.com/v2/your-api-key,https://rpc.ankr.com/solana
# Server-side RPC proxy target (for /api/solana-rpc)
SOLANA_RPC_TARGET=https://api.mainnet-beta.solana.com
# Alchemy API key for Solana RPC
SOLANA_ALCHEMY_API_KEY=your-alchemy-solana-api-key

# =============================================================================
# WORMHOLE CONFIGURATION
# =============================================================================
# Wormhole RPC endpoints (optional - uses public endpoints by default)
NEXT_PUBLIC_WORMHOLE_RPC=https://wormhole-v2-mainnet-api.certus.one

# =============================================================================
# SOCIAL APIS
# =============================================================================
NEXT_PUBLIC_NEYNAR_API_KEY=your_neynar_api_key_here
NEXT_PUBLIC_MEMORY_API_KEY=your_memory_protocol_api_key_here

# =============================================================================
# SERVER-SIDE CONFIGURATION (for build/compile time)
# =============================================================================
# NEAR Account (for server-side operations)
NEAR_ACCOUNT_ID=your-account.near
NEAR_PRIVATE_KEY=ed25519:your-private-key